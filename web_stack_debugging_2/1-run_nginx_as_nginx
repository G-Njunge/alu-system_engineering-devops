#!/usr/bin/env bash
# Fix Nginx to run as nginx user and listen on port 8080

# Install nginx if not installed
apt-get update -y
apt-get install -y nginx

# Ensure nginx user exists
id -u nginx &>/dev/null || useradd -r -s /usr/sbin/nologin nginx

# 1. Change master process to run as nginx
sed -i 's/^user .*/user nginx;/' /etc/nginx/nginx.conf

# 2. Change ports from 80 â†’ 8080 (for all configs)
sed -i 's/listen 80;/listen 8080;/g' /etc/nginx/sites-enabled/default
sed -i 's/listen \[::\]:80;/listen [::]:8080;/g' /etc/nginx/sites-enabled/default

# 3. Fix permissions so nginx can run without root
chown -R nginx:nginx /var/log/nginx
chown -R nginx:nginx /var/lib/nginx
mkdir -p /var/cache/nginx
chown -R nginx:nginx /var/cache/nginx

# 4. Test and restart
nginx -t
nginx -s reload
